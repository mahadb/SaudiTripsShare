<style>
  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'Cabin', sans-serif;
    direction: ltr;
  }

  .container {
    display: flex;
    height: 100vh;
  }


  .left {
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    -webkit-animation-name: left;
    animation-name: left;
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-delay: 1s;
    animation-delay: 1s;

  }

  .right {
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    -webkit-animation-name: left;
    animation-name: left;
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-delay: 1s;
    animation-delay: 1s;

  }

  .header>h2 {
    margin: 0;
    color: #184d47;
    font-weight: 800;
  }

  .header>h4 {
    margin-top: 10px;
    font-weight: normal;
    font-size: 15px;
    color: rgba(0, 0, 0, 0.4);
  }

  .form {
    max-width: 80%;
    display: flex;
    flex-direction: column;
    border-right: rgb(230, 230, 230) 2px solid;
    padding: 7px;
  }

  .form>p {
    text-align: right;
  }

  .form>p>a {
    color: #000;
    font-size: 14px;
  }

  .form-field {
    height: 46px;
    padding: 0 16px;
    border: 2px solid #ddd;
    border-radius: 4px;
    font-family: "Rubik", sans-serif;
    outline: 0;
    transition: 0.2s;
    margin-top: 20px;
    border-radius: 25px;
  }

  .form-field:focus {
    border-color: #0f7ef1;
  }

  .form>button {
    padding: 12px 10px;
    border: 0;
    background: linear-gradient(90deg, rgb(23 77 71) 0%, rgb(149 187 123) -3%, rgb(106 188 185) 90%, rgb(104 190 179) 101%, rgb(106 188 185) 100%);
    border-radius: 3px;
    margin-top: 10px;
    color: #fff;
    letter-spacing: 1px;
    font-family: 'Cabin', sans-serif;
    border-radius: 25px;
  }

  .animation {
    -webkit-animation-name: move;
    animation-name: move;
    -webkit-animation-duration: 0.4s;
    animation-duration: 0.4s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    -webkit-animation-delay: 2s;
    animation-delay: 2s;
  }

  .a1 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  .a2 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  .a3 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  .a4 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  .a5 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  .a6 {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  @-webkit-keyframes move {
    0% {
      opacity: 0;
      visibility: hidden;
      transform: translateY(-40px);
    }

    100% {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }

  @keyframes move {
    0% {
      opacity: 0;
      visibility: hidden;
      transform: translateY(-40px);
    }

    100% {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }

  @-webkit-keyframes left {
    0% {
      opacity: 0;
      width: 0;
    }

    100% {
      opacity: 1;
      padding: 20px 40px;
      width: 840px;
    }
  }

  @keyframes left {
    0% {
      opacity: 0;
      width: 0;
    }

    100% {
      opacity: 1;
      padding: 20px 40px;
      width: 840px;
    }
  }
</style>



<div class="row">
  <div class="col-md-8 col-sm-12">
    <div class="container">
      <div class="left">
        <div class="header">
          <h2 class="animation a1">Edit Profile</h2>
          <h4 class="animation a2">Edit your profile info:</h4>
        </div>
        <form class="form" method="POST" action="/user/profile">
          <input name="firstName" type="text" class="form-field animation a3" placeholder="First Name">
          <input name="lastName" type="text" value="<%= user.lastName %>" class="form-field animation a3"
            placeholder="Last Name">
          <input name="emailAddress" type="email" value="<%= user.emailAddress %>" class="form-field animation a3"
            placeholder="Email address">
          <input name="id" type="hidden" value="<%= user._id %>">
          <button type="submit" class="animation a6">Save</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-12">
    <div class="container">
      <div class="right">
        <div class="header">
          <h2 class="animation a1">Change Password</h2>
          <h4 class="animation a2">Change your Password:</h4>
        </div>
        <form class="form" method="POST" action="/user/changepassword">
          <input name="password" type="password" value="<%= user.password %>" class="form-field animation a3"
            placeholder="Email address">
          <input name="id" type="hidden" value="<%= user._id %>">
          <button type="submit" class="animation a6">Change Password</button>
        </form>
      </div>
    </div>
  </div>

</div>