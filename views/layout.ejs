<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SaudiTrips</title>
  <!--Boostrap-5.0v-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <!--CSS-->
  <link rel="stylesheet" href="../css/main.css">
  <link href="../css/carousel.css" rel="stylesheet">
  <!---Font-Awesome-->
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.3/css/fontawesome.min.css"
    integrity="sha384-wESLQ85D6gbsF459vf1CiZ2+rr+CsxRY0RpiF1tLlQpDnAgg6rwdsUF1+Ics2bni" crossorigin="anonymous">
  <!--AOS-CSS-Library-->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>
  <% if(alerts.success) { %> <% alerts.success.forEach(function(msg){ %>
  <div class="alert alert-success"><%= msg %></div>
  <% }) %> <% } %>


  <% if(alerts.error) { %> <% alerts.error.forEach(function(msg){ %>
  <div class="alert alert-danger"><%= msg %></div>

  <% }) %> <% } %>

  <!-- HEADER -->
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="../"><img class="logo" src="../img/logo.png" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0 ">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/post/index" tabindex="-1" aria-disabled="true">Explore</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/post/add" tabindex="-1" aria-disabled="true">Post Trip</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/aboutus" tabindex="-1" aria-disabled="true">About us</a>
            </li>

        </div>

        <div class="user-info"><% if(currentUser) { %>
          <a href="/user/profile"><span> <i class="fas fa-user"></i> Hi, <%= currentUser.firstName %> </span> </a>
          <a href="/auth/logout"> <i class="fas fa-sign-out-alt"></i> </a>

          <% } else { %>
        </div>

        <li class="nav-item btn-signup">
          <a class="nav-link btn-color" href="auth/signup" tabindex="-1" aria-disabled="true">Sign up</a>
        </li>
        <li class="nav-item btn-signup">
          <a class="nav-link btn-color" href="auth/signin" tabindex="-1" aria-disabled="true">Login</a>
        </li>
        </ul>

        <% } %>

      </div>
      </div>
    </nav>
  </header>

  <%- body %>

  <!-- FOOTER -->
  <footer>
    <!-- <p class="float-end footer-txt"><a href="#"><i class="fas fa-arrow-circle-up"></i></a></p> -->
    <div class="FooterBack"></div>
    <p class="footer-txt">Â©2021 Saudi Trips, Inc. </p>
  </footer>

  <!--JQuery-3.6.0-->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <!--AOS-CSS-->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <!--fontawesome-->
  <script src="https://kit.fontawesome.com/9c81edfc2c.js" crossorigin="anonymous"></script>
  <!--Boostrap-5.0.0v-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script>
    AOS.init();
  </script>
</body>

</html>